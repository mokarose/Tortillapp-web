@page
@model Tortillapp_web.Pages.RegisterModel
@{
    ViewData["Title"] = "Registro";
}

<div class="bg-white">
    <div class="container">
        <div class="row mt-3">
            <div class="col-sm">
                <h1 class="text-center">Se parte de la comunidad</h1>
                <div class="row h-75 aling-items-center justify-content-center">
                    <div class="col-auto">
                        <label for="backto" class="form-label">¿Ya eres parte? <a href="/Login">Inicia sesión</a></label>
                    </div>
                </div>
            </div>
            <div class="col-md">
                <form method="post">
                    <h2 class="text-start">Crear un perfil</h2>
                    <div class="row align-content-start">
                        <div class="col-sm mb-3">
                            <label for="umail" class="form-label">Dirección de correo</label>
                            <input type="email" class="form-control" id="mail" name="user_mail" placeholder="correo@example.com">
                        </div>
                    </div>
                    <div class="row align-content-start">
                        <div class="col-sm mb-3">
                            <label for="uname" class="form-label">Nombre de usuario</label>
                            <input type="text" class="form-control" id="user" name="user_name" placeholder="usuario">
                        </div>
                    </div>
                    <div class="row align-content-start">
                        <div class="col-sm mb-3">
                            <label for="upass" class="form-label">Contraseña</label>
                            <input type="password" class="form-control" id="pass" name="user_pass" placeholder="contraseña">
                        </div>
                    </div>
                    <div class="row align-content-start">
                        <div class="col-sm mb-3">
                            <label for="xpass" class="form-label">Confirma contraseña</label>
                            <input type="password" class="form-control" id="pasx" name="user_pasx" placeholder="confirma contraseña">
                        </div>
                    </div>

                    <div class="row text-center align-items-center justify-content-center">
                        <button type="submit" class="btn btn_base w-50  rounded-pill">Enviar</button>
                    </div>
                </form>
        
            </div>
        </div>
    </div>
</div>


